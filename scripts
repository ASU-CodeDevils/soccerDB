CREATE TABLE Games(
    gameID INT               NOT NULL,
    homeID INT               NOT NULL, 
    awayID INT               NOT NULL, 
    winnerID INT             NOT NULL, 
    gameDate VARCHAR(80)     NOT NULL, 
    scoreAway INT            DEFAULT 0,
    scoreHome INT            DEFAULT 0,
    tournamentID             NULL, 
    PRIMARY KEY(gameID)
);
