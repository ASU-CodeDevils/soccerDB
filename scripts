CREATE TABLE Tournaments(
    tournamentID INT         NOT NULL, 
    tournamentName VARCHAR(110) NOT NULL, 
    tournamentDate VARCHAR(80) NOT NULL, 
    winnerID INT             NOT NULL, 
    winnerName VARCHAR(110)  NOT NULL, 
    mvpID INT                NOT NULL, 
    PRIMARY KEY(tournamentID)
);
