CREATE TABLE Teams(
    teamID INT               NOT NULL,
    teamName VARCHAR(110)    NOT NULL, 
    games_won INT            DEFAULT 0,
    games_lost INT           DEFAULT 0,
    leagueID INT             NOT NULL, 
    PRIMARY KEY(teamID) 
);
