CREATE TABLE Players(
    playerID INT             NOT NULL, 
    name VARCHAR(110)        NOT NULL, 
    playernumber INT         NOT NULL, 
    position VARCHAR(60)     NOT NULL, 
    teamID INT               NOT NULL, 
    games_played INT         DEFAULT 0, 
    PRIMARY KEY(playerID)
    
);
